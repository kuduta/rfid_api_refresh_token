{
  "openapi": "3.0.3",
  "info": {
    "title": "RFID API",
    "version": "1.0.0",
    "description": "API for RFID system with JWT authentication."
  },
  "servers": [
    {
      "url": "http://localhost:5000"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "summary": "Login",
        "description": "Login with username and password.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "access_token": { "type": "string" },
                    "refresh_token": { "type": "string" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/refresh": {
      "post": {
        "summary": "Refresh Token",
        "description": "Get new access token using refresh token.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "New access token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "access_token": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/rfid": {
      "post": {
        "summary": "Submit RFID Data",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "epc": { "type": "string" },
                  "rssi": { "type": "integer" },
                  "ipaddress": { "type": "string" },
                  "client": { "type": "string" }
                },
                "required": ["epc", "rssi", "ipaddress", "client"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Data received",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/rfid-logs": {
      "get": {
        "summary": "Get RFID Logs",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "List of RFID logs",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer" },
                      "epc": { "type": "string" },
                      "rssi": { "type": "integer" },
                      "ipaddress": { "type": "string" },
                      "client": { "type": "string" },
                      "timestamp": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
